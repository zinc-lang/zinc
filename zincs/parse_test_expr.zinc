:: infix_expr fn void {
    a + b;
    a + b - c;

    a * b;
    a / b;

    a * b + c; // == (a * b) + c
    a + b * c; // == a + (b * c)

    foo and bar;
    foo and bar or aaa and bbb; // == (foo and bar) or (aaa and bbb)
    foo and !bar or not aaa and bbb; // == (foo and (!bar)) or ((not aaa) and bbb)
}

